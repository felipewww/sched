{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "lib": ["esnext"],
    "paths": {
      "@Presentation/*": ["Presentation/*"],
      "@Domain/*": ["Domain/*"],
      "@Data/*": ["Data/*"],
      "@Tests/*": ["Tests/*"],
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}